<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintStart_toStartOf="@id/back"
            android:layout_marginTop="50dp" />


        <TextView
            android:id="@+id/nameEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/back"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginTop="90dp"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/nameEmail"
            app:layout_constraintTop_toBottomOf="@id/nameEmail"
            android:hint="예. test1234@naver.com" />


        <TextView
            android:id="@+id/name_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/editEmail"
            app:layout_constraintTop_toBottomOf="@id/editEmail"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editname"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/name_name"
            app:layout_constraintTop_toBottomOf="@id/name_name"
            android:hint="이름을 입력해주세요" />

        <TextView
            android:id="@+id/name_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/editname"
            app:layout_constraintTop_toBottomOf="@id/editname"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editphone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/name_phone"
            app:layout_constraintTop_toBottomOf="@id/name_phone"
            android:hint="전화번호를 입력해주세요" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:text="인증번호 전송"
            android:textSize="10sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/name_phone"
            app:layout_constraintBottom_toBottomOf="@id/editphone"
            app:layout_constraintEnd_toEndOf="@id/editphone" />


        <EditText
            android:id="@+id/confirm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/editphone"
            app:layout_constraintTop_toBottomOf="@id/editphone"
            android:hint="인증번호를 입력해주세요" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:text="인증하기"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/confirm"
            app:layout_constraintEnd_toEndOf="@id/confirm" />


        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>