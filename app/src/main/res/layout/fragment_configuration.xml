<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/configurationLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/left"
        />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="환경설정"
        android:textColor="@color/color_dark_000000_ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#B8B8B8">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="알림"
            android:textSize="10sp"
            android:textColor="@color/color_dark_000000_ffffff"/>


    </LinearLayout>

    <Switch
        android:id="@+id/reviewWrite"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="리뷰 작성"
        android:textStyle="bold"
        android:textSize="16sp"

        />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B8B8B8" />

    <Switch
        android:id="@+id/reviewComment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="리뷰 댓글"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B8B8B8" />


    <Switch
        android:id="@+id/eventMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="이벤트 혜택"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        />


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:background="#B8B8B8" >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="20dp"
              android:text="기타"
              android:textColor="@color/color_dark_000000_ffffff"
              android:textSize="10sp" />



      </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/versionName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="버전정보"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_dark_000000_ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

        <TextView
          android:id="@+id/versionCode"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/versionName"
            android:textSize="13sp"
            android:hint="1.0.0"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/withDrawal"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/color_dark_ffffff_000000"
        android:text="회원탈퇴"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/color_dark_000000_ffffff"/>
</LinearLayout>








