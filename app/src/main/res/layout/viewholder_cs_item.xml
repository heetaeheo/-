<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B8B8B8" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/block"
    tools:layout_marginTop="10dp"
   >

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/block"
        app:layout_constraintBottom_toBottomOf="@id/block"
        app:layout_constraintStart_toStartOf="@id/block" />

    <TextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_dark_000000_ffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/block"
        app:layout_constraintEnd_toEndOf="@id/block" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/right"
        app:layout_constraintEnd_toEndOf="@id/block"
        app:layout_constraintBottom_toBottomOf="@id/block"
        app:layout_constraintRight_toLeftOf="@id/block"
        app:layout_constraintTop_toTopOf="@id/block"
        app:tint="@color/color_dark_000000_ffffff" />


</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
