<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="고객센터"
            android:textColor="@color/color_dark_000000_ffffff"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


        <TextView
            android:id="@+id/question_center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_dark_ffffff_000000"
            android:text="자주하는 질문"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_dark_000000_ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


        <TextView
            android:id="@+id/email_center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_dark_ffffff_000000"
            android:text="이메일로 문의하기"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_dark_000000_ffffff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


        <TextView
            android:id="@+id/pollution"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_dark_ffffff_000000"
            android:text="이물질 신고"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_dark_000000_ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


        <TextView
            android:id="@+id/centerNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_dark_ffffff_000000"
            android:text="YU MARKET 고객센터(전화)"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_dark_000000_ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


        <TextView
            android:id="@+id/store_quest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/color_dark_ffffff_000000"
            android:text="입점문의"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_dark_000000_ffffff"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B8B8B8" />


     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/color_dark_ffffff_000000">

             <TextView
                android:layout_margin="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 android:text="(주)YU"
                 android:textColor="@color/color_dark_000000_ffffff"
                 android:textStyle="bold"
                 android:textSize="13sp"/>

     </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>