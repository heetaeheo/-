<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메일 전송"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메일 보내는 곳 : YU MARKET"
        android:textSize="15sp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:gravity="left"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/titleEdit"
        android:layout_gravity="center"
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:hint="제목을 입력해주세요"/>

    <TextView
        android:layout_marginTop ="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="20sp"
        android:textColor="@color/color_dark_000000_ffffff"
        />

    <EditText
        android:id="@+id/contentEdit"
        android:layout_gravity="center"
        android:layout_width="384dp"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:hint="내용을 입력해주세요"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문의하고 싶으신 내용을 작성해 주시고 전송버튼을 눌러주세요"
        android:textSize="14sp"
        android:textColor="@color/color_dark_000000_ffffff"
        android:gravity="left"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

<!--        <Button-->
<!--            android:id="@+id/email_cancel"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="25dp"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:text="취소"-->
<!--            android:textSize="16sp"-->
<!--            android:textColor="@color/color_dark_000000_ffffff"-->
<!--            android:backgroundTint="@color/color_dark_ffffff_000000"-->
<!--            app:layout_constraintStart_toStartOf="parent" />-->




    <Button
    android:id="@+id/email_send"
    android:backgroundTint="@color/color_dark_000000_ffffff"
    android:layout_marginRight="25dp"
    android:text="전송"
    android:textColor="@color/color_dark_ffffff_000000"
    android:layout_width="wrap_content"
    android:textSize="16sp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>